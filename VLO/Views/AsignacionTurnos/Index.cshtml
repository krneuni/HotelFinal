@model IEnumerable<VLO.Models.AsignacionTurno>
@{
    ViewBag.Title = "Index";
}
<script src="~/Scripts/jquery-1.10.2.js"></script>
<link href="~/Scripts/datatables.min.css" rel="stylesheet" />
<script src="~/Scripts/datatables.min.js"></script>
<link href="~/Content/estilos.css" rel="stylesheet" />
<h2>Asignación de turnos</h2>
<p>
    <a href="@Url.Action("Create","AsignacionTurnos")" class="btn btn-success"> <i class="glyphicon glyphicon-plus"></i> Nuevo</a>
</p>
<div class="row col-md-12 table-responsive" style="margin-top:10px">

    <table id="dtTable" class="table table-bordered" style="background-color:#FFF">
        <thead>
            <tr style="background-color:#E6E6E6">
                <th>
                    @Html.DisplayNameFor(model => model.Usuarios.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Turnos.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Fecha)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Usuarios.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Turnos.Nombre) ->
                        @Html.DisplayFor(modelItem => item.Turnos.HoraInicial) -
                        @Html.DisplayFor(modelItem => item.Turnos.HoraFinal)

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fecha)
                    </td>
                    <td>
                        @Html.ActionLink(" ", "Edit", new { id = item.IdAsignacion }, new { @class = "btn btn-warning glyphicon glyphicon-refresh" }) |
                        @Html.ActionLink(" ", "Delete", new { id = item.IdAsignacion }, new { @class = "btn btn-danger glyphicon glyphicon-trash" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script src="~/Scripts/TableIdioma.js"></script>